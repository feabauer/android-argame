		<activity android:label="@string/app_name" android:name=".MixView"
			android:screenOrientation="landscape" android:launchMode="singleTop">

			<!-- <intent-filter> <action android:name="android.intent.action.MAIN" 
				/> <category android:name="android.intent.category.LAUNCHER" /> </intent-filter> -->

			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="http" android:mimeType="application/mixare-json" />
				<data android:scheme="content" android:mimeType="application/mixare-json" />
				<data android:scheme="file" android:mimeType="application/mixare-json" />
			</intent-filter>

			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
			<meta-data android:name="android.app.default_searchable"
				android:value=".MixView" />
		</activity>

		<activity android:name=".MixListView"
			android:screenOrientation="user" android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>


		<activity android:name=".menu"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden" />


		<activity android:name="MixMap" android:screenOrientation="user"
			android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>


		<!-- ZombieRun Alphabetical -->
		<activity android:name=".activity.About"
			android:label="About" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation" />
		<activity
			android:name=".activity.MainMenuWithMultiplayerDisabled"
			android:label="MainMenu_WithMultiplayerDisabled"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" />
		<activity android:name=".activity.SinglePlayerEntry"
			android:label="SinglePlayerEntry" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation" />
		<activity android:name=".activity.SinglePlayerGame"
			android:label="SinglelayerGame" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation" />
		<activity android:name=".activity.StartGame"
			android:label="StartGame" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation" />
		<activity
			android:name=".activity.StartGame$WaitingForFirstFixActivity"
			android:label="StartGame_WaitingForFirstFix"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" />
		<activity
			android:name=".activity.StartGame$ShowingPickDestinationMessageActivity"
			android:label="StartGame_ShowingPickDestinationMessage"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" />
		<activity
			android:name=".activity.StartGame$PickingDestinationActivity"
			android:label="StartGame_PickingDestination"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" />
		<activity android:name=".activity.WebGame"
			android:label="WebGame" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation" />
		<activity android:name=".activity.WinOrLoseGame"
			android:label="WinOrLoseGame" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation" />





	</application>


	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="9" />

	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.CAMERA" />
